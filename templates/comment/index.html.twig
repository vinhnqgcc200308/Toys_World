{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
<div class ="container" style = "padding: 120px">
    <h1 style = "text-align: center;">Comment</h1>
    <p style = "text-align: center;">Customer can comment to evaluate or Make questions for my shop Thanks for your feedback</p>
        <button type="button" class="btn btn-dark">
            <a href="{{ path('app_comment_new') }}" style="text-decoration: none; color: white">Add Comment</a>
        </button>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Customer</th>
                <th>Description</th>
                <th style="text-align:center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.date ? comment.date|date('Y-m-d') : '' }}</td>
                <td>{{ comment.customer.name }}</td>
                <td width="300px;">{{ comment.description }}</td>
                <td style="text-align:center">
                    <a href="{{ path('app_comment_show', {'id': comment.id}) }}"> <i class="fa-solid fa-arrows-to-eye" style = "color:black"></i></a>
                    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}"><i class="fa-solid fa-pen-to-square"style = "color:black"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
