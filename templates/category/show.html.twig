{% extends 'baseadmin.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>
    <a href="{{ path('app_category_index') }}"><span class="material-icons">arrow_back</span></a>
    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_category_edit', {'id': category.id}) }}">
        <span class="material-icons">edit</span>
    </a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
