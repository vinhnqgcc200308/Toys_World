{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
<div class="nav" style = " padding:120px">
    <h1 >Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Gmail</th>
                <td>{{ customer.gmail }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ customer.telephone }}</td>
            </tr>
            <tr>
                <th>Birth</th>
                <td>{{ customer.birth ? customer.birth|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-dark" width="30px">
        <a href="{{ path('app_comment_index') }}" style = "text-decoration: none; color:white">Return</a>
    </button>
    <button class="" style="margin-left:340px">
        {{ include('customer/_delete_form.html.twig') }}
    </button>
</div>
{% endblock %}
