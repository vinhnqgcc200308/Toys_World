
<div class="container">

		<div class="row">

			<div class="col-md-10 ml-md-auto">

				<div class="card bg-light mb-3 mt-5">

					<div class="card-body">

						<div class="card-header mb-3">Customer Form</div>

						{{ form_start(form) }}

						<div class="form_group">

							<div class="col-md-12 mb-3">

								{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}

							</div>

						</div>

						<div class="form_group">

							<div class="col-md-12 mb-3">

								{{ form_row(form.gmail, {'attr': {'class':

              'form-control'}}) }}

							</div>

						</div>

						<div class="form_group">

							<div class="col-md-12 mb-3">

								{{ form_row(form.address, {'attr': {'class':

              'form-control'}}) }}

							</div>

						</div>
                        <div class="form_group">

							<div class="col-md-12 mb-3">

								{{ form_row(form.telephone, {'attr': {'class': 'form-control'}}) }}

							</div>

						</div>
                        <div class="form_group">

							<div class="col-md-12 mb-3">

								{{ form_row(form.birth, {'attr': {'class': 'form-control'}}) }}

							</div>

						</div>

						<div class="form-group"style=" text-align:center; margin-left:170px">

							<div class="col-md-8 col-md-offset-4" style="margin-top:5px;">

                            <button class="btn btn-dark" >{{ button_label|default('Save') }}</button>
							</div>

						</div>

						{{ form_end(form) }}

					</div>

				</div>

			</div>

		</div>

	</div>